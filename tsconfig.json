{
  "compilerOptions": {                  
    "target": "es5",                      
    "module": "commonjs",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
}
